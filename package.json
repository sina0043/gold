{
  "name": "gold",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:gold": "node dist/gold/server/server.mjs",
    "build:browser": "ng build --configuration=production --output-path=dist/gold/browser --base-href /gold/",
    "build:server": "ng run gold:server:production",
    "build:ssr": "npm run build:browser && npm run build:server",
    "copy-browser-to-docs": "rm -rf docs && mkdir -p docs && cp -r dist/gold/browser/* docs/",
    "prepare-deploy": "npm run build:ssr && npm run copy-browser-to-docs",
    "deploy": "npm run prepare-deploy && git add . && git commit -m \"chore: deploy browser build to docs\" || true && git push origin main"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/platform-server": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@angular/ssr": "^20.1.4",
    "@primeuix/themes": "^1.2.3",
    "chart.js": "^4.5.0",
    "express": "^5.1.0",
    "moment": "^2.30.1",
    "ol": "^10.6.1",
    "particles.js": "^2.0.0",
    "primeicons": "^7.0.0",
    "primeng": "^20.0.1",
    "rxjs": "~7.8.0",
    "swiper": "^12.0.1",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.4",
    "@angular/cli": "^20.1.4",
    "@angular/compiler-cli": "^20.1.0",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/moment": "^2.11.29",
    "@types/node": "^20.17.19",
    "autoprefixer": "^10.4.21",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2"
  },
  "description": "To make it easy for you to get started with GitLab, here's a list of recommended next steps.",
  "main": "postcss.config.js",
  "repository": {
    "type": "git",
    "url": "https://devgit.baazardev.ir/mohammadreza/baazar-low-wage.git"
  },
